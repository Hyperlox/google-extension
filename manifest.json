{
//required
  "manifest_version": 2,
  "name": "IMSA Link Finder",
  "version": "1.0.0",
  
  "description": "Accessible links for IMSA resources.",
  "icons": { //the small button
    "128": "icon.jpg" //took a picture of IMSA's onion logo
  },
  
  //it's what the small button can do
  "browser_action": {
    "default_title": "IMSA's resources", //the text when you hoover over the button
    "default_popup": "popup.html",  //where it goes after you click on the button
  },
   "permissions": ["activeTab", "declarativeContent", "storage"], //what the app can access, go to https://developer.chrome.com/docs/extensions/mv2/declare_permissions/ to see all the permessions you can do
}


